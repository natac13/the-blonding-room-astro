---
import { PlusIcon } from 'lucide-react'
import { NAIL_SERVICES } from '../data/nail-services'
import SectionHeader from './SectionHeader.astro'
import Gallery from './Gallery.astro'
const images = await Astro.glob('../assets/gallery-2/nail/*.jpg').then(
  (files) => {
    return Promise.all(files.map((file) => file.default))
  },
)
---

<section
  id="nail-services"
  class="relative w-full bg-white pb-6 pt-24 md:pb-10 md:pt-36 lg:py-48"
  aria-describedby="nail-services-title"
>
  <svg
    class="absolute left-0 right-0 top-0 hidden h-16 w-full lg:block lg:h-20"
    viewBox="0 0 100 100"
    preserveAspectRatio="none"
  >
    <polygon points="0 0, 100 0,100 100,0 0" class="fill-gray-900"></polygon>
  </svg>
  <SectionHeader title="Nail Services" id="nail-services-title" color="dark" />

  <div class="container mx-auto max-w-5xl">
    {
      NAIL_SERVICES.map((service) => {
        return (
          <div class="px-4 py-12">
            <header class="flex  flex-col items-center justify-center gap-8">
              <h3 class="text-center text-2xl font-light uppercase text-black/90 md:text-3xl xl:text-4xl">
                {service.title}
              </h3>
              <div class="mx-auto w-1/6 border-b border-solid border-primary-900" />
            </header>
            <ul class="mt-4 grid grid-cols-2 place-items-center gap-10 lg:grid-cols-3">
              {service.items.map((item) => {
                return (
                  <li class="flex w-full flex-row ">
                    <div class="mr-2 mt-0.5 text-primary-700">
                      <PlusIcon />
                    </div>
                    <div class="flex w-full flex-col items-start">
                      <p class="text-lg font-light text-black/90 xl:text-xl">
                        {item.item}
                      </p>
                    </div>
                  </li>
                )
              })}
            </ul>
          </div>
        )
      })
    }
  </div>
  <Gallery images={images} />
</section>
